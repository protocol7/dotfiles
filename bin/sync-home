#!/bin/sh
# Usage: sync-home [user@]host ...
# Copy crucial dotfiles and scripts to one or more remote machines.
#
# Copyright (c) 2008 Ryan Tomayko <http://tomayko.com/about>
set -e

test -z "$1" || echo "$@" | grep -q -- '--help' && {
    echo "Usage: $0 [user@]host ..."
    exit 1
}

cd ~
for host in "$@"; do
    echo "sync: $host"
    rsync -avz --include-from=- --exclude='*' ./ "${host}:" <<FILES
+ /.inputrc
+ /.bashrc
+ /.dircolors

+ /.screenrc
+ /.gitconfig
+ /.shorten-path.bash
+ /.wgetrc

+ /.vimrc
+ /.gvimrc
+ /.vim
- /.vim/sessions
- /.vim/swap
- /.vim/.netrwhist
- /.vim/tmp
- /.vim/bundle/*/.git
- /.vim/backup
+ /.vim/**

+ /bin
+ /bin/ack
+ /bin/graph
+ /bin/spsrv
+ /bin/spsrvssh
+ /bin/spsrvmscp
+ /bin/spsrvmssh
FILES
done
