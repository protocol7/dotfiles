#!/bin/bash

# From https://github.com/wbond/mtmux

if [[ -e $1 ]]; then
  SERVERS=$(cat $1 | tr '\n' ' ')
  SESSION_NAME=$1
elif [[ -e ~/.mtmux/$1 ]]; then
  SESSION_NAME=$1
else
  SERVERS="$@"
  SESSION_NAME=mtmux
fi

tmux new-window -a -n $SESSION_NAME
shift
for SERVER in $SERVERS; do
  tmux split-window "ssh $SERVER"
  tmux select-layout tiled
done
tmux kill-pane -t 0
tmux select-pane -t 0
tmux select-layout tiled
